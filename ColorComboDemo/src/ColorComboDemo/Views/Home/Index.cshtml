<html>
<head>
    @* jQuery and Bootstrap from CDN *@
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="/js/main.js"></script>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="/css/main.css" rel="stylesheet" />
</head>

<body>
    @* Top Banner (Jumbotron) *@
    <div class="container">
        <div class="jumbotron">
            <h1>Security System - Master Panel</h1>
            This system is used to test the available user security chips to determine if they can be arranged
            in order that will unlock the master panel of your security system.
        </div>
    </div>

    @* Main Interface *@
    <div class="container">
        <div class="row">

            @* Input String Editor *@
            <div class="col-md-6">
                <div class="well well-md">
                    <h2>Input String</h2>
                    @* In a real scenario I would construct the inputs using Razor HTML helpers and server side data models *@
                    <textarea id="InputString" name="InputString"></textarea>
                    <div class="row">
                        <div class="col-sm-4">
                            <button id="AddChipButton" name="AddChipButton" class="btn btn-success">Add Chip</button>
                        </div>

                        <div class="col-sm-4">
                            <button id="ClearStringButton" name="ClearStringButton" class="btn btn-danger">Clear Input String</button>
                        </div>

                        <div class="col-sm-4">
                            <button id="ValidateInputButton" name="ValidateInputButton" class="btn btn-primary">Validate Input String</button>
                        </div>
                    </div>
                </div>
            </div>

            @* Output String Display *@
            <div class="col-md-6">
                <div class="well well-md">
                    <h2>System Output</h2>
                    <textarea readonly id="OutputString" name="OutputString"></textarea>
                    <div id="OutputStatusMessage" class="text-danger">
                        Awaiting Chips...
                    </div>
                </div>
            </div>

        </div> @* End Row *@
    </div> @* End Container *@

    @* Confirm Clearing the input string modal *@
    <div id="ConfirmClearModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-title">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title text-danger">Are you sure?</h4>
                </div>

                <div class="modal-body">
                    <p class="text-danger">
                        This will erase the current input string, are you sure?
                    </p>
                </div>

                <div class="modal-footer">
                    <div class="row">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button id="CancelClearStringButton" class="btn btn-primary">No, back to app</button>
                        </div>

                        <div class="col-sm-4">
                            <div id="ConfirmClearStringButton" name="ConfirmClearStringButton" class="btn btn-danger">Yes, clear input string</div>
                        </div>
                    </div>
                </div>
            </div> @* End Content *@
        </div> @* End Dialog *@
    </div> @* End Modal *@

    @* Easy interface to add a chip to the input string *@
    <div id="AddChipModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-title">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title text-success">Add a new chip:</h4>
                </div>

                <div class="modal-body">
                    <span id="AddChipErrorMessage" class="text-danger"></span>

                    <div class="row">
                        <div class="col-sm-6">
                            <strong>First Color:</strong>
                        </div>

                        <div class="col-sm-6">
                            <input type="text" id="AddChipFirstColor" name="AddChipFirstColor" />
                        </div>
                    </div>
                    <br />

                    <div class="row">
                        <div class="col-sm-6">
                            <strong>Second Color:</strong>
                        </div>

                        <div class="col-sm-6">
                            <input type="text" id="AddChipSecondColor" name="AddChipSecondColor" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <div class="row">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button id="CancelAddButton" class="btn btn-danger">Cancel</button>
                        </div>

                        <div class="col-sm-4">
                            <div id="ConfirmAddButton" name="ConfirmClearStringButton" class="btn btn-success">Add</div>
                        </div>
                    </div>
                </div>
            </div> @* End Content *@
        </div> @* End Dialog *@
    </div> @* End Modal *@

</body>
</html>
